@model SportsBettingApp.Models.GameOdds

@{
    ViewData["Title"] = "Detail";
    
}

<h1 style="text-align:center">@Model.away_team @@ @Model.home_team</h1> 
<div style="text-align:center">
    <dl class="row">
        <dt class = "col-sm-2"> 
            @Html.DisplayNameFor(model => model.home_team)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.home_team)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.away_team)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.away_team)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.commence_time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.commence_time)
        </dd>
    </dl>
</div>

<h2 style="text-align:center">
    Bookmakers:
</h2>
<br />
@foreach(var bookmaker in Model.bookmakers) 
{
    <h3 style="text-align:center">@bookmaker.title</h3>
    <br />
    <h3 style="text-align:center">@bookmaker.key</h3>
    <br />
    <h4 style="text-align:center">Markets:</h4>
    <br />
    <h3 style="text-align:center">@bookmaker.key</h3>
    

    @foreach (var market in bookmaker.markets)
    {
        <h5 style="text-align:center">@market.key</h5>
        @foreach (var outcome in market.outcomes) 
        {
            @outcome.name
            <span>:</span>

            @if (market.key == "h2h")
            {
                <span>@outcome.price</span>
            }
            else 
            {
                <span>@outcome.point</span>
            }
            
            <br />
            <br />
        }
    }
}


